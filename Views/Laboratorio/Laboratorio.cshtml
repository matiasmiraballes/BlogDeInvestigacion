@using BlogDeInvestigacion.ViewModels
@using BlogDeInvestigacion.Models
@model LaboratorioViewModel
@{
    ViewBag.Title = "Laboratorio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {

    <script src="@Url.Content("/Scripts/App/Laboratorio/Laboratorio.js")"></script>

}

@section menus {

    @{
        Html.RenderPartial("_SideBarSection", new SeccionMenu
        {
            Titulo = "ADMINISTRAR LABORATORIO",
            Opciones = new List<OpcionMenu>
                        {
                        new OpcionMenu { Nombre = "Crear Evento", Link = "#", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                        new OpcionMenu { Nombre = "Crear Noticia", Link = "#mdlCrearNoticia", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                        new OpcionMenu { Nombre = "Crear Encuesta", Link = "#", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                    }
        });
    }

    @{
        Html.RenderPartial("_SideBarSection", new SeccionMenu
        {
            Titulo = "MI CUSTOM MENU, CAPO",
            Opciones = new List<OpcionMenu>
                        {
                        new OpcionMenu { Nombre = "Opcion 1", Link = "#", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                        new OpcionMenu { Nombre = "Opcion 2, Maquina", Link = "#mdlCrearNoticia", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                        new OpcionMenu { Nombre = "Opc.3", Link = "#", ClaseIcono = "fa fa-tasks fa-fw mr-3" },
                    }
        });
    }

}

<link href="@Url.Content("/Content/App/Laboratorio/Laboratorio.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("/Content/App/Laboratorio/Comentarios.css")" rel="stylesheet" type="text/css" />


<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1> @Model.Laboratorio.Nombre </h1>
        <p class="lead"> @Model.Laboratorio.Descripcion </p>
    </div>
</div>

@*===================*@
@*Seccion comentarios*@

<div>
    <div class="container">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Comentar</span>
            </div>
            <textarea class="form-control" aria-label="With textarea"></textarea>
        </div>
    </div>
</div>



<div class="container">


    @foreach (var conversacion in Model.Conversaciones)
    {
        <div class="row">

            @if (conversacion.Comentarios.Any())
            {
                <!-- FIRST ACTION -->
                <div class="media comment-box">
                    <div class="media-left">
                        <a href="#">
                            <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@conversacion.Comentarios.First().NombreDeUsuario</h4>
                        <p>@conversacion.Comentarios.First().Texto</p>
                        <!-- FIRST ACTION -->

                        @foreach (var comentario in conversacion.Comentarios.Skip(1))
                        {
                            <!-- FOR EACH-1 -->
                            <div class="media">
                                <div class="media-left">
                                    <a href="#">
                                        <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <h4 class="media-heading">@comentario.NombreDeUsuario</h4>
                                    <p>@comentario.Texto</p>
                                </div>
                            </div>
                            <!-- FOR EACH-1 -->
                        }

                        <textarea class="form-control" placeholder="write a comment..." rows="3"></textarea>
                        <br>
                        <button type="button" class="btn btn-info pull-right">Post</button>
                        <div class="clearfix"></div>

                    </div>
                </div>

            }
        </div>
    }


</div>


@*MODALS SECTION*@

<div class="modal fade" id="mdlCrearNoticia" tabindex="-1" role="dialog" aria-labelledby="Crear Noticia" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>